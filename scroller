local term = require 'term'
local component = require 'component'
local gpu = component.gpu
local os = require 'os'

local screens = component.list('screen')

local textToDraw = "Hello World blah blah"
local textLength = string.len(textToDraw)

local maxResX = 36
local maxResY = 1


while true do

  term.clear()

  for i=0,textLength do

    for k, v in pairs(screens) do
      gpu.bind(k, false)
      local resX, resY = gpu.getResolution()
      if (resX ~= maxResX and resY ~= maxResY) then
        gpu.setResolution(maxResX, maxResY)
      end
      term.write(string.sub(textToDraw, i, i))    
    end

  end

  os.sleep(5)

end
